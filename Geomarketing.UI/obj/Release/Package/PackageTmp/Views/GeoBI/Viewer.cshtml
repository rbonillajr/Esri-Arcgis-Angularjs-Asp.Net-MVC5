    <div id="window" kendo-window="vm.window" k-title="'Filtros'" k-visible="false" k-modal="true" k-width="300" k-height="450">
        <div class="container-fluid">
            <div class="row"><strong>Ver Puntos de venta por: </strong></div>
            <div class="row">
                <br />
                <label>
                    <input type="radio" ng-model="verClientesPor" value="tipo" />
                    Tipo Cliente
                </label>
                <br />
                <label>
                    <input type="radio" ng-model="verClientesPor" value="ruta" />
                    Ruta - Vendedor
                </label>
                <br />
                <label>
                    <input type="radio" ng-model="verClientesPor" value="abc" />
                    ABC
                </label>
            </div>
            <div class="row"><br /><strong>Seleccione los datos a filtrar: </strong></div>
            <div class="row">
                <br />
                <select kendo-multi-select k-options="vm.selectOptions" k-ng-model="vm.selectedCategoria"></select>

                @*<input kendo-drop-down-list
                    k-option-label="'Todas las Categorias'"
                    k-data-text-field="'text'"
                    k-data-value-field="'value'"
                    k-data-source="vm.categorias"
                    ng-model="vm.selectedCategoria" />*@
            </div>
            <div class="row">
                <br />
                <input kendo-drop-down-list
                       k-data-text-field="'text'"
                       k-data-value-field="'value'"
                       k-data-source="vm.data"
                       ng-model="vm.selected" />
            </div>
            <div class="row">
                <br />
                <label>
                    <input type="checkbox" ng-model="vm.filtroMarca.Mobil">
                    Mobil
                </label><br />
                <label>
                    <input type="checkbox" ng-model="vm.filtroMarca.Shell">
                    Shell
                </label><br />
                <label>
                    <input type="checkbox" ng-model="vm.filtroMarca.Castrol">
                    Castrol
                </label><br />
                <label>
                    <input type="checkbox" ng-model="vm.filtroMarca.Valvoline">
                    Valvoline
                </label><br />
                <label>
                    <input type="checkbox" ng-model="vm.filtroMarca.Chevron">
                    Chevron
                </label>
            </div>
            <div class="row">

                <div class="pull-right">
                    <button class="btn btn-sm btn-primary" id="yesButton">Filtrar</button>
                    <button class="btn btn-sm" id="noButton">Cancelar</button>
                    <button class="btn btn-sm btn-info" id="limpiarFilter">Limpiar Filtro</button>
                </div>
            </div>
        </div>
    </div>

    <div id="winBuffer" kendo-window="winBuffer" k-title="'Buffer'" k-visible="false" k-modal="true" k-width="300" k-height="250">
        <div class="container-fluid">
            <div class="row">Introduzca los datos del Buffer: </div>
            <div class="row">
                <br />
                <strong>Radio: </strong>
                <input kendo-numeric-text-box k-min="0" k-max="1000" k-ng-model="bufferValue" />
            </div>
            <div class="row">
                <br />
                <strong>Unidades: </strong>
                <input kendo-drop-down-list
                       k-data-text-field="'text'"
                       k-data-value-field="'value'"
                       k-data-source="vm.unidades"
                       ng-model="selectedUnidades" />
            </div>
            <div class="row">
                <br />
                <div class="pull-right">
                    <button class="btn btn-sm btn-primary" id="yesBuffer" ng-click="vm.yesBuffer">Aplicar</button>
                    <button class="btn btn-sm" id="cancelBuffer" ng-click="vm.cancelBuffer">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
    <div id="winPivot" kendo-window="vm.winPivot" k-title="'Reportes'" k-visible="false" k-actions='[
         "maximize",
         "close"
         ]' k-width="600" k-height="500">
        <button id="export" class="k-button k-button-icontext"><span class="k-icon k-i-excel"></span>Export to Excel</button>
        <div id="pivotgrid"></div>
        <div kendo-splitter="splitter"
             k-panes="[ {collapsed: true, collapsible: true, size: '20%' }, { collapsible: false, size: '80%'} ]"
             k-orientation="'horizontal'"
             style="height:100%">
            <div>
                <div id="ContentConfig">
                    <div id="configurator"></div>
                </div>
            </div>
            <div>
                <div id="ContentPivot">
                    <div id="pivotgrid"></div>
                </div>
            </div>
        </div>
    </div>
    <div id="winAnalisis" kendo-window="vm.winAnalisis" k-title="'Analisis'" k-modal="true" k-visible="false" k-actions='[
         "close"
         ]' k-width="300" k-height="270">
        <div class="container-fluid">
            <div class="row">
                <br />
                <strong>División Política</strong>
            </div>
            <div class="row">
                <br />
                <input id="provincia" style="width: 200px" />
            </div>
            <div class="row">
                <br />
                <input id="distrito" style="width: 200px" />
            </div>
            <div class="row">
                <br />
                <input id="corregimiento" style="width: 200px" />
            </div>
            <div class="row">
                <br />
                <div class="pull-right">
                    <button class="btn btn-sm btn-primary" id="yesAnalisis">Aplicar</button>
                    <button class="btn btn-sm" id="cancelAnalisis">Cancelar</button>
                    <button class="btn btn-sm btn-info" id="limpiarAnalisis">Limpiar Filtro</button>
                </div>
            </div>
        </div>

    </div>
