@{
    ViewBag.Title = "Mapa";
    Layout = "~/Views/Shared/_LayoutMaps.cshtml";
}
<div class="map" ng-controller="ViewerController as vm">

    <div kendo-toolbar k-options="vm.toolbarOptions"></div>

    <div style="height:93.5%">

        <div esri-map>
            @*<div id="LocateButton"></div>
                <div id="HomeButton"></div>*@

        </div>
        <div id="LogoGeo"></div>
    </div>

    <div id="window" kendo-window="vm.window" k-title="'Filtros'" k-visible="false" k-modal="true" k-width="250" k-height="230">
        <div class="container-fluid">
            <div class="row">Selccione los datos a filtrar: <strong> </strong>?</div>
            <div class="row">
                <input kendo-drop-down-list
                       k-data-text-field="'text'"
                       k-data-value-field="'value'"
                       k-data-source="vm.data"
                       ng-model="vm.selected" />
            </div>
            <div class="row">
                <br />
                <label>
                    <input type="checkbox" ng-model="vm.filtroMarca.Mobil">
                    Mobil
                </label><br />
                <label>
                    <input type="checkbox" ng-model="vm.filtroMarca.Shell">
                    Shell
                </label><br />
                <label>
                    <input type="checkbox" ng-model="vm.filtroMarca.Castrol">
                    Castrol
                </label><br />
                <label>
                    <input type="checkbox" ng-model="vm.filtroMarca.Valvoline">
                    Valvoline
                </label><br />
                <label>
                    <input type="checkbox" ng-model="vm.filtroMarca.Chevron">
                    Chevron
                </label>
            </div>
            <div class="row">
                <div class="pull-right">
                    <button class="btn btn-sm btn-primary" id="yesButton" ng-click="vm.yesFilter">Filtrar</button>
                    <button class="btn btn-sm" id="noButton" ng-click="vm.cancelFilter">Cancelar</button>
                </div>
            </div>
        </div>
    </div>

    <div id="winBuffer" kendo-window="vm.winBuffer" k-title="'Buffer'" k-visible="false" k-modal="true" k-width="300" k-height="200">
        <div class="container-fluid">
            <div class="row">Introduzca los datos del Buffer: </div>
            <div class="row">
                <br/>
                <strong>Radio: </strong>
                <input kendo-numeric-text-box k-min="0" k-max="1000" k-ng-model="value" />
            </div>       
            <div class="row">
                <br />
                <strong>Unidades: </strong>
                <input kendo-drop-down-list
                       k-data-text-field="'text'"
                       k-data-value-field="'value'"
                       k-data-source="vm.unidades"
                       ng-model="vm.selectedUnidades" />
            </div>     
                <div class="row">
                    <br/>
                    <div class="pull-right">
                        <button class="btn btn-sm btn-primary" id="yesBuffer" ng-click="vm.yesBuffer">Aplicar</button>
                        <button class="btn btn-sm" id="cancelBuffer" ng-click="vm.cancelBuffer">Cancelar</button>
                    </div>
                </div>
            </div>
    </div>

</div>